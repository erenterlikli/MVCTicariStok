@using MVCStok.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Musteriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table class="table table-bordered" id="tbl3">
    <thead>
        <tr>
            <th>MÜŞTERİ ID</th>
            <th>MÜŞTERİ AD</th>
            <th>MÜŞTERİ SOYAD</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var mus in Model)
        {
            <tr>
                <td>@mus.MusteriId</td>
                <td>@mus.MusteriAd</td>
                <td>@mus.MusteriSoyad</td>
                <td><a href="/Musteri/Sil/@mus.MusteriId" class="btn btn-danger" onclick="return confirm('Silmek İstediğinize Emin Misiniz?')">SİL</a></td>
                <td><a href="/Musteri/MusteriGetir/@mus.MusteriId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }

    </tbody>

</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<br />
<a href="/Musteri/YeniMusteri" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl3').DataTable({
        language: {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"

        }
    });


</script>